<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity"
    android:focusable="true">

    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="@string/welcome_textview_text"
        android:textColor="@color/dark_grey"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/interests_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:hint="@string/interests_edittext_hint"
        android:maxLength="15"
        android:maxLines="1"
        android:padding="10dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/number_of_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/interests_edittext"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="@string/interests_left"
        android:textColor="@color/dark_grey"
        android:textSize="15sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/chips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_interests"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="102dp"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_slab"
        android:shadowRadius="3"
        android:text="@string/go_button_text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="1000dp"
        tools:ignore="MissingPrefix" />
</RelativeLayout>